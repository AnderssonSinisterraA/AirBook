@page "{id:int}"
@model AirBook.Pages.Itinerarios.EditModel
@{
    ViewData["Title"] = "Editar Itinerario";
}

<h1>Editar Itinerario</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Itinerario.IdReserva" class="control-label"></label>
        <select asp-for="Itinerario.IdReserva" class="form-control" asp-items="@(ViewData["ReservaId"] as SelectList)"></select>
        <span asp-validation-for="Itinerario.IdReserva" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Itinerario.Detalle" class="control-label"></label>
        <input asp-for="Itinerario.Detalle" class="form-control" />
        <span asp-validation-for="Itinerario.Detalle" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

<a asp-page="./Index">Volver a la lista</a>