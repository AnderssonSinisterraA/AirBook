@page "{id:int}"
@model AirBook.Pages.Pasajeros.DeleteModel
@{
    ViewData["Title"] = "Eliminar Pasajero";
}

<h1>Eliminar Pasajero</h1>

<h3>¿Está seguro que desea eliminar este pasajero?</h3>
<div>
    <h4>Pasajero</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Model.Pasajero.Nombre
        </dd>
        <dt class="col-sm-2">
            Apellido
        </dt>
        <dd class="col-sm-10">
            @Model.Pasajero.Apellido
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Pasajero.Email
        </dd>
        <dt class="col-sm-2">
            Telefono
        </dt>
        <dd class="col-sm-10">
            @Model.Pasajero.Telefono
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Pasajero.IdPasajero" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-page="Index">Volver a la lista</a>
    </form>
</div>