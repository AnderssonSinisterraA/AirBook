@page
@model AirBook.Pages.Reservas.CreateModel
@{
    ViewData["Title"] = "Crear Nueva Reserva";
}

<h1>Crear Nueva Reserva</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Reserva.IdPasajero" class="control-label"></label>
        <select asp-for="Reserva.IdPasajero" class="form-control" asp-items="@(ViewData["PasajeroId"] as SelectList)"></select>
        <span asp-validation-for="Reserva.IdPasajero" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Reserva.IdVuelo" class="control-label"></label>
        <select asp-for="Reserva.IdVuelo" class="form-control" asp-items="@(ViewData["VueloId"] as SelectList)"></select>
        <span asp-validation-for="Reserva.IdVuelo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Reserva.FechaReserva" class="control-label"></label>
        <input asp-for="Reserva.FechaReserva" class="form-control" />
        <span asp-validation-for="Reserva.FechaReserva" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Reserva.Estado" class="control-label"></label>
        <input asp-for="Reserva.Estado" class="form-control" />
        <span asp-validation-for="Reserva.Estado" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
</form>