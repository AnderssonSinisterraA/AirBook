@page "{id:int}"
@model AirBook.Pages.Pasajeros.DetailsModel
@{
    ViewData["Title"] = "Detalles del Pasajero";
}

<h1>Detalles del Pasajero</h1>

<div>
    <h4>Pasajero</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Model.Pasajero.Nombre
        </dd>
        <dt class="col-sm-2">
            Apellido
        </dt>
        <dd class="col-sm-10">
            @Model.Pasajero.Apellido
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Pasajero.Email
        </dd>
        <dt class="col-sm-2">
            Telefono
        </dt>
        <dd class="col-sm-10">
            @Model.Pasajero.Telefono
        </dd>
    </dl>
</div>
<div>
    <a asp-page="Edit" asp-route-id="@Model.Pasajero.IdPasajero">Editar</a> |
    <a asp-page="Index">Volver a la lista</a>
</div>